<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console Appender - Works everywhere -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File Appender - Only for local development -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/application.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/application-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
    </appender>

    <!-- Loggly Appender -->
    <appender name="LOGGLY" class="ch.qos.logback.classic.net.HTTPAppender">
        <url>https://logs-01.loggly.com/bulk/a7ef6c4b-0462-49b0-8659-b595c08ef33a/tag/cst323-aws-test/</url>
        <method>POST</method>
        <contentType>application/json</contentType>
        <encoder>
            <pattern>{"timestamp":"%d{yyyy-MM-dd'T'HH:mm:ss.SSS'Z'}","level":"%level","logger":"%logger","message":"%message","application":"cloud-test-app"}</pattern>
        </encoder>
    </appender>

    <!-- Default profile (local) - uses both CONSOLE and FILE -->
    <springProfile name="default">
        <root level="INFO">
            <appender-ref ref="CONSOLE" />
            <appender-ref ref="FILE" />
        </root>
        <logger name="org.example.dbs" level="DEBUG" />
        <logger name="org.example.dbs.config.LoggingInterceptor" level="INFO" />
    </springProfile>

    <!-- AWS profile - ONLY uses CONSOLE (logs to stdout) -->
    <springProfile name="aws">
        <root level="INFO">
            <appender-ref ref="CONSOLE" />
            <appender-ref ref="LOGGLY" />
        </root>
        <logger name="org.example.dbs" level="INFO" />
        <logger name="org.example.dbs.config.LoggingInterceptor" level="INFO" />
    </springProfile>

    <!-- GCP profile - ONLY uses CONSOLE (no file logging) -->
    <springProfile name="gcp">
        <root level="INFO">
            <appender-ref ref="CONSOLE" />
        </root>
        <logger name="org.example.dbs" level="INFO" />
        <logger name="com.google.cloud.sql" level="INFO" />
    </springProfile>

    <!-- Azure profile - ONLY uses CONSOLE (no file logging) -->
    <springProfile name="azure">
        <root level="INFO">
            <appender-ref ref="CONSOLE" />
        </root>
        <logger name="org.example.dbs" level="INFO" />
    </springProfile>
</configuration>